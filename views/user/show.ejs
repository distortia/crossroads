<div class="container">
	<h1><%= user.name %></h1>

	<% if(user.admin) { %>
		<span class="icono-user gold" aria-hidden="true"></span>(Admin)
	<% } else { %>
		<span class="icono-user grey" aria-hidden="true"></span>(Standard User)
	<% } %>

	 <h3>Company: <%= user.company %></h3>
	<h3>User Level: <%= user.level %></h3>
	<hr>
	<h3>Contact: <a href="mailto:<%= user.email %>"><%= user.email %></h3>
	<a class="btn btn-md btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
</div> 